<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-storyteller" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:ios="http://apache.org/cordova/ns/plugins/ios"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <name>StorytellerPlugin</name>
    <description>Plugin to use the Storyteller SDK in your app</description>
    
    <engines>
            <engine name="cordova" version=">=11.0.0" />
    </engines>
    
    <js-module src="www/storyteller.js" name="Storyteller">
        <clobbers target="cordova.plugins.storyteller" />
    </js-module>

    <platform name="ios">
        <preference name="SwiftVersion" value="5.0" />
        <config-file target="config.xml" parent="/*">
            <feature name="Storyteller">
                <param name="ios-package" value="CDVStoryteller" />
            </feature>
        </config-file>
        
        <source-file src="src/ios/Storyteller.swift" />
        <source-file src="src/ios/StorytellerHandler.swift" />
        <source-file src="src/ios/StorytellerViewController.swift" />
        
        <framework src="AVFoundation.framework" />
        <framework src="UIKit.framework" />
        <framework src="Foundation.framework" />
        <framework src="CoreMedia.framework" />
        <framework src="CoreAnimation.framework" />
        <framework src="src/ios/StorytellerSDK.xcframework" custom="true" embed="true" link="true" />

        <header-file src="src/ios/StorytellerSDK.xcframework/ios-arm64/StorytellerSDK.framework/Headers/StorytellerSDK-Swift.h" />


    </platform>
    
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Storyteller">
                <param name="android-package" value="CDVStoryteller" />
            </feature>
        </config-file>
    </platform>
</plugin>
